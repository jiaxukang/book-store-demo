@model IEnumerable<BookShopDemo.Models.Book>

@{
    ViewData["Title"] = "catalogue";
}

<h1>catalogue</h1>
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        @item.title
                    </div>
                    <div class="card-header">
                        @item.bookCode
                    </div>
                    <div class="card-footer">
                        <a asp-controller="orders" asp-action="Create" asp-route-id="@item.Id">Buy</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
